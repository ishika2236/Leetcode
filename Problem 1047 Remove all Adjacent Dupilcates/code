class Solution {
public:
    string removeDuplicates(string s) {
        int i = 0;
        while (i < s.length() - 1) {
            if(s.length()==0){
                break;
            }
            if (s[i] == s[i + 1]) {
                s.erase(i, 2);
                i = max(0, i - 1);
            } else {
                i++;
            }
        }
        return s;
    }
};
